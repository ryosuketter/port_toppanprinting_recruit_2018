extend /_includes/_layout
append variables
  //- Required
  - var pageTitle= "採用情報｜凸版印刷｜2018年度新卒採用サイト";
  - var pageDescription= "採用情報はこちらから。凸版印刷株式会社の2018年度新卒採用サイトです。トッパンの事業や製品、社員へのインタビュー、プロジェクトストーリー、採用担当者メッセージ、募集要項、よくあるご質問などをご紹介しています。";
  - var pageKeywords= "採用情報,凸版印刷";
  //- Optional
  - var pageOgpTitle= "";
  - var pageOgpImage= "test";
  - var pageLang= "ja";
  - var pageOgpType= "website";
  //- Not modified
  - var pageUrl= "recruit/index.html";
  //- visionalist
  - var visionalist_prm= "rc100122";

block content
  // contents
  .recruit-key_visual
    .key_visual-inner
      .key_visual-inner-bread_crumb
        ul
          li
            a(href='../') トップページ
            | &gt;
          li
            a(href='../recruit/index.html') 採用情報
      .key_visual-inner-txt-wrapper.wow.fadeInUp(data-wow-delay='0.1s')
        .key_visual-inner-txt-wrapper-hd
          h1 RECRUIT
        .key_visual-inner-txt-wrapper-sub
          p 採用情報
        .key_visual-inner-txt-wrapper-txt
          p トッパンの採用情報についてご紹介します。
  .contents-width
    .appear
      .business-contents-wrapper.fiu.animated
        .business-contents-category
          a(href='message.html')
            img(src='../assets/img/recruit/recruit-contents-message.png', alt='採用担当者メッセージ' class="pc")
            img(src='../assets/img/recruit/sp-recruit-contents-message.png', alt='採用担当者メッセージ' class="sp")
            .txt-wrapper-up
              h2 採用担当者メッセージ
              p 採用担当者から学生のみなさんへメッセージ
        .business-contents-bottom
          .business-contents-products
            a(href='info.html')
              img(src='../assets/img/recruit/recruit-contents-info.png', alt='募集要項' class="pc")
              img(src='../assets/img/recruit/sp-recruit-contents-info.png', alt='募集要項' class="sp")
              .txt-wrapper
                h2 募集要項
                p エントリーをご検討の方はこちら
          .business-contents-research-and-development
            a(href='faq.html')
              img(src='../assets/img/recruit/recruit-contents-faq.png', alt='FAQ' class="pc")
              img(src='../assets/img/recruit/sp-recruit-contents-faq.png', alt='FAQ' class="sp")
              .txt-wrapper
                h2 FAQ
                p よくあるご質問

  // /contents
