  //-menber
  - var name = 'nishigaki';
  - var name_j = '西垣 操';
  - var prev_name = 'ishiguro';
  - var prev_alt = '石黒 庸平';
  - var next_name = 'karikawa';
  - var next_alt = '刈川 直紀';
